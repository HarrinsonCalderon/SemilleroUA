@model IEnumerable<Semillero_ProgramacioFinal.Models.sp_competenciasA_Result>

@{
    ViewBag.Title = "historialCompetenciaA";
    Layout = "~/Views/Shared/_LayoutSesion.cshtml";
}



<div class="box container">
    <div class="box-header with-border">
        <h3 class="box-title">Competencias finalizadas</h3>
    </div>

    <div class="form-group">
        <input type="text" class="form-control pull-right" style="width:20%" id="search" placeholder="Escribir para buscar">
    </div>

    <!-- /.box-header -->
    <div class="">

        <table class="table-bordered table pull-right" id="mytable" cellspacing="0" style="width: 100%;">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.idcompetencia)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Competencia)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.fechacompetencia)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EstadoCompetencia)
                </th>
                <th><label>Resultados</label></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.idcompetencia)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Competencia)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.fechacompetencia)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EstadoCompetencia)
                    </td>
                    <td>
                        <a class="col-sm btn btn-primary " href="~/Sesion/resultadosCompetenciaA/@item.idcompetencia">Resultados</a>
                    </td>
                </tr>
            }

        </table>


    </div>

</div>



<script>
    // Write on keyup event of keyword input element
    $(document).ready(function () {
        $("#search").keyup(function () {
            _this = this;
            // Show only matching TR, hide rest of them
            $.each($("#mytable tbody tr"), function () {
                if ($(this).text().toLowerCase().indexOf($(_this).val().toLowerCase()) === -1)
                    $(this).hide();
                else
                    $(this).show();
            });
        });
    });
</script>