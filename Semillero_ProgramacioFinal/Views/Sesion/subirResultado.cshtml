@model IEnumerable<Semillero_ProgramacioFinal.Models.sp_listarGruposSubirResultado_Result>

@{
    ViewBag.Title = "subirResultado";
    Layout = "~/Views/Shared/_LayoutSesion.cshtml";
    var id = 1; var it = 1;
}





<div class="box container">
    <div class="box-header with-border">
        <h3 class="box-title">Subir resultado</h3>
    </div>

    <!-- /.box-header -->
    <div class="">
        <table class="table table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.idGrupo)
                </th>
                <th>
                    <label>Participante 1</label>
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.identificacion1)
                </th>
                <th>
                    <label>Participante 2</label>
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.identificacion2)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NombreEquipo)
                </th>
              
                <th>
                    <label>Nivel</label>
                </th>

                <th>

                    <label>Resultado</label>

                </th>
            </tr>
            @foreach (var item in Model)
            {
                if (it % 2 != 0)
                {


                    <tr>
                        <td>
                            <label>@id</label>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NombreParticipante1)
                            @Html.DisplayFor(modelItem => item.ApellidoParticipante1)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.identificacion1)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NombreParticipante2)
                            @Html.DisplayFor(modelItem => item.ApellidoParticipante2)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.identificacion2)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NombreEquipo)
                        </td>
                        
                        <td>
                            @Html.DisplayFor(modelItem => item.Nivel)
                        </td>

                        <td>
                            <div class="form-group row">
                                
                                <div class="col col-md-12">
                                    @using (Html.BeginForm("subirResultado", "Sesion", FormMethod.Post))
                                    {

                                        <input name="idgrupo" type="hidden" value=@item.idGrupo>
                                        <div class="row ">
                                            <div class="col col-md-4 ">
                                                <input name="puesto" type="number"  value=@item.puesto>
                                            </div>
                                            <div class=" col  col-md-4 ml-3">
                                                <input type="submit" value="Enviar" class="btn btn-success" />
                                            </div>
                                        </div>
                                    }
                                </div> 
                            </div>

                        </td>
                    </tr>
                    id++;
                }
                it++;

            }


        </table>
    </div>

</div>
