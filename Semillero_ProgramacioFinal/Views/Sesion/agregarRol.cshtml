@model Semillero_ProgramacioFinal.Models.Sesion.RolViewModels
@{
    ViewBag.Title = "agregarRol";
    Layout = "~/Views/Shared/_LayoutSesion.cshtml";
}



<div class="box container">
    <div class="box-header with-border">
        <h3 class="box-title">Agregar rol</h3>
    </div>

    
    <!-- /.box-header -->
    <div class=" ">
        @using (Html.BeginForm("agregarRol", "Sesion", FormMethod.Post))
        {
         
           
                <div class="form-horizontal">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group ">
                        @Html.LabelFor(model => model.nombre, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-5">
                            @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control  " } })
                            @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Enviar" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
           
        }

    </div>
    </div>