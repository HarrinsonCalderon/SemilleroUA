@model Semillero_ProgramacioFinal.Models.Sesion.SalaCompetenciaViewModel

@{
    ViewBag.Title = "agregarSalaCompetencia";
    Layout = "~/Views/Shared/_LayoutSesion.cshtml";
}

 



<div class="box container">
    <div class="box-header with-border">
        <h3 class="box-title">Agregar sala competencia</h3>
    </div>


    <!-- /.box-header -->
    <div class=" ">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <input id="prodId" name="idc" type="hidden" value="@ViewBag.idc">

            <div class="row">

                <div class="form-group col col-md-4">
                    @Html.LabelFor(model => model.nombre, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-5">
                        @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col col-md-4">
                    @Html.LabelFor(model => model.cupos, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-5">
                        @Html.EditorFor(model => model.cupos, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.cupos, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col col-md-4">
                    <div class="col col-sm-6">
                        <select name="estado" id="estadoc" class="  form-control" required>
                            <option selected disabled value="">Estado sala</option>
                            @foreach (var it in ViewBag.estado)
                            {
                                <option value=@it.id>@it.nombre</option>
                            }
                        </select>
                    </div>
                </div>



            </div>

            <div class="form-group">
                <div class="col-md-offset-5 col-md-10">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </div>
        }

    </div>
</div>

