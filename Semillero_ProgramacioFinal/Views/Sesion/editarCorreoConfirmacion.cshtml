@model Semillero_ProgramacioFinal.Models.Sesion.CorreoConfirmacionViewModels

@{
    ViewBag.Title = "editarCorreoConfirmacion";
    Layout = "~/Views/Shared/_LayoutSesion.cshtml";
}

 






<style>
    .t {
        width: 100%;
        height: 200px;
        font-size: 14px;
        line-height: 18px;
        border: 1px solid #dddddd;
        padding: 10px;
    }
</style>


<div class="box">
    <div class="box-header">
        <h3 class="box-title">
            Editar correo de confirmacion

        </h3>
        <!-- tools box -->
        <div class="pull-right box-tools">
            <button type="button" class="btn btn-default btn-sm" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                <i class="fa fa-minus"></i>
            </button>
            <button type="button" class="btn btn-default btn-sm" data-widget="remove" data-toggle="tooltip" title="Remove">
                <i class="fa fa-times"></i>
            </button>
        </div>
        <!-- /. tools -->
    </div>
    <!-- /.box-header -->
    <div class="box-body pad">




        @using (Html.BeginForm("editarCorreoConfirmacion", "Sesion", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="">


                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.id)


                @Html.LabelFor(model => model.asunto, htmlAttributes: new { @class = "" })

                @Html.TextAreaFor(model => model.asunto, htmlAttributes: new { @class = "textarea t" })
                @Html.ValidationMessageFor(model => model.asunto, "", new { @class = "text-danger" })



                @Html.LabelFor(model => model.mensaje, htmlAttributes: new { @class = " " })

                @Html.TextAreaFor(model => model.mensaje, htmlAttributes: new { @class = "textarea t" })
                @Html.ValidationMessageFor(model => model.mensaje, "", new { @class = "text-danger" })


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Guardar" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        }



    </div>
     
</div>
