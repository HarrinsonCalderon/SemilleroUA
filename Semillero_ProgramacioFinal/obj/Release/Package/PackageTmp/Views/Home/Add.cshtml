@model Semillero_ProgramacioFinal.Models.ViewModels.UsuarioViewModel

@{
    ViewBag.Title = "Add";
    Layout = Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/Content/Home/formulario2.css">

<h2>@ViewBag.Title</h2>

<div class="formulario contenido">
    @using (Html.BeginForm("Add", "Home", FormMethod.Post, new { role = "form", @class = "" }))
    {
        <img class="avatar blok" src="~/img/Fondo/nuevoUser.png" alt="">
        <h1 class="text-uppercase blok">Registro</h1>

        @Html.AntiForgeryToken()
        @Html.ValidationMessage("error", new { @class = "text-danger" })<br />

        <p>
            <label for="t">Tipo de documento</label>

            <select name="tipoDocumento" class="form-control">
                <option></option>
                @foreach (var it in ViewBag.documento)
                {
                    <option value=@it.id>@it.nombre</option>
                }
            </select>
        </p>
        <p>
            @Html.LabelFor(d => d.Identificacion)
            @Html.TextBoxFor(d => d.Identificacion, new { @class = "" })
            @Html.ValidationMessage("Identificacion", new { @class = "text-danger" })<br />
        </p>
        <p class="blok">
            @Html.LabelFor(d => d.Email)
            @Html.TextBoxFor(d => d.Email, new { @class = "" })
            @Html.ValidationMessage("Email", new { @class = "text-danger" })<br />
        </p>
        <p>
            @Html.LabelFor(d => d.Password)
            @Html.PasswordFor(d => d.Password, new { @class = "" })
            @Html.ValidationMessage("Password", new { @class = "text-danger" })<br />
        </p>
        <p>
            @Html.LabelFor(d => d.ConfirmPassword)
            @Html.PasswordFor(d => d.ConfirmPassword, new { @class = "" })
            @Html.ValidationMessage("ConfirmPassword", new { @class = "text-danger" })<br />
        </p>

        <p>
            @Html.LabelFor(d => d.PrimerNombre)
            @Html.TextBoxFor(d => d.PrimerNombre, new { @class = "" })
            @Html.ValidationMessage("PrimerNombre", new { @class = "text-danger" })<br />
        </p>
        <p>
            @Html.LabelFor(d => d.SegundoNombre)
            @Html.TextBoxFor(d => d.SegundoNombre, new { @class = "" })
            @Html.ValidationMessage("SegundoNombre", new { @class = "text-danger" })<br />
        </p>

        <p>
            @Html.LabelFor(d => d.PrimerApellido)
            @Html.TextBoxFor(d => d.PrimerApellido, new { @class = "" })
            @Html.ValidationMessage("Primer Apellido", new { @class = "text-danger" })<br />
        </p>

        <p>
            @Html.LabelFor(d => d.SegundoApellido)
            @Html.TextBoxFor(d => d.SegundoApellido, new { @class = "" })
            @Html.ValidationMessage("SegundoApellido", new { @class = "text-danger" })<br />
        </p>

        <p>
            @Html.LabelFor(d => d.Telefono)
            @Html.TextBoxFor(d => d.Telefono, new { @class = "" })
            @Html.ValidationMessage("Telefono", new { @class = "text-danger" })<br />
        </p>

        <p>
            
            <label for="a">Academia</label>
            <select name="academia" id="a" class="form-control col">

 
                    <option></option>
                    @foreach (var it in ViewBag.academia)
                    {
                        <option value=@it.id>@it.nombre</option>
                    }
               
            </select>
        </p>


        <div class="blok" style="text-align:center">
            <input type="submit" class="button2" value="Registrarse" />
        </div>

        <div class="blok">
            <p>Al registrarte, aceptas nuestras Condiciones de uso y Política de privacidad.</p>
            <p>¿Ya tienes una cuenta?<a class="link" href="Login">Iniciar Sesion</a></p>
        </div>
    }
</div>