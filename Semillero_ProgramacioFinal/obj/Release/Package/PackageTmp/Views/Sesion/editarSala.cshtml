@model Semillero_ProgramacioFinal.Models.Sesion.SalaViewModel

@{
    ViewBag.Title = "editarSala";
    Layout = "~/Views/Shared/_LayoutSesion.cshtml";
}

<div class="box container">
    <div class="box-header with-border">
        <h3 class="box-title">Editar sala</h3>
    </div>


    <!-- /.box-header -->
    <div class=" ">
        @using (Html.BeginForm("editarSala", "Sesion", FormMethod.Post))
        {


        <div class="form-horizontal">
            @Html.HiddenFor(model => model.idsala)
            
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="row">
                <div class="form-group col col-sm-6">
                    @Html.LabelFor(model => model.nombre, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group col col-sm-4">
                    @Html.LabelFor(model => model.cupos, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.cupos, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.cupos, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col col-sm-2">
                        <select name="estado" id="estadoc" class="  form-control" required>
                            <option selected disabled value="">Estado sala</option>
                            @foreach (var it in ViewBag.estado)
                            {
                                <option value=@it.id>@it.nombre</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
        </div>



            <div class="form-group">
                <div class="col-md-offset-5 col-md-10">
                    <input type="submit" value="Enviar" class="btn btn-primary" />
                </div>
            </div>
            <hr />
            <hr />
        }

    </div>
</div>

<script>
    document.getElementById("estadoc").value = @Model.fkestado

</script>